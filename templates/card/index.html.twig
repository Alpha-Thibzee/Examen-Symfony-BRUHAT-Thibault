{% extends 'base.html.twig' %}

{% block title %}Liste des cartes{% endblock %}

{% block body %}
<div class="container-fluid d-flex row align-items-center justify-content-center mt-3 mb-3">
<div class="col-3">
{{ form_start(filter) }}
        {{ form_widget(filter) }}
{{ form_end(filter) }}
</div>
</div>

<div class="container-fluid d-flex row align-items-center justify-content-center mt-3 mb-3">

{% for cards in card %}
    <div class="card col-3 mx-3 my-3 " style="width: 18rem;">
    <img src="{{  asset("/assets/card/" ~ cards.picture) }}" class="img-top" alt="">
        <div class="card-body">
            <h3 class="card-title">{{ cards.name }}</h3>
            <h5>Prix : {{ cards.value }}€</h5>
                <p class="card-text"><h6>Résumé :</h6> {{ cards.description }}</p>
                <p class="card-text">Quantité : {{ cards.quantity }}</p>
                <p class="card-text">Acheté le : {{ cards.buyAt|date('d/m/Y') }}</p>
                <p class="card-text">Sortie le : {{ cards.releaseAt|date('d/m/Y') }}</p>
                
                {% if cards.isOnSale %}
                <p class="card-text">Disponible à la vente</p>
                {% else %}
                <p class="card-text">Indisponible à la vente</p>
                {% endif %}
               
            {% if app.user %}
            <a href="{{ path('view-one',{id:cards.id})}}" class="btn btn-primary">Voir la carte</a>
            {% else %}
                <a href="">Proposer une offre</a>
            {% endif %}
        </div>
</div>
{% endfor %}
</div>
{% endblock %}
