{% extends 'base.html.twig' %}

{% block title %}Mail{% endblock %}

{% block body %}

<div class="container user-select-none ">
<div class="bg-white p-5 contact-form w-50 mx-auto user-select-none">

    {{ form_start(form) }}

    <div class="form-group">
        {{ form_row(form.fullName, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="form-group">
        {{ form_row(form.value, {'attr': {'class': 'form-control', 'value': value, 'min': value}}) }}
    </div>

    <div class="form-group">
        {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="form-group">
        {{ form_row(form.message, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="form-group d-flex align-items-center justify-content-center">
        <input type="submit" value="Envoyer" class="btn btn-primary mt-3">
    </div>

{{ form_end(form) }}

</div>

</div>
</div>

{% endblock %}